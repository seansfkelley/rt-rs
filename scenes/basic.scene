depth_limit 10
background_color .1 .1 .1

camera perspective {
  position 0 0 -25
  look_at 0 0 0
  up 0 1 0
  field_of_view 60
}

// for pretty

image_dimensions 1024 1024
antialias 3

// for animation

// image_dimensions 512 512
// antialias 1
//
// animation {
//   frames 18
//   camera_transforms [
//     rotate 10 0 1 0
//   ]
// }

texture red constant flat {
  color #f00
}

texture green constant flat {
  color #0f0
}

texture blue constant flat {
  color #00f
}

texture cyan_plastic constant flat {
  color 0 .7 .7
  specular_exponent 1
  reflectivity .1
}

texture mirror constant flat {
  color 0.9 0.9 0.9
  specular_exponent 7
  reflectivity 0.95
}

texture yellow_matte constant flat {
  color .7 .7 0
  specular_exponent 0
}

texture bw_checkerboard checkerboard {
  checks_per_unit 32
}

texture glass constant transmissive {
  color 0.9 0.9 0.9
  specular_exponent 7
  index_of_refraction 1.5
  transmissivity 0.95
  reflectivity 0.95
}

transform translate -4 -4 2
object {
  geometry sphere {
    radius 1
  }
  texture cyan_plastic
}
transform pop

transform translate -1 0 -19
object {
  geometry sphere {
    radius 0.5
  }
  texture glass
}
transform pop

transform translate 4 4 0
object {
  geometry sphere {
    radius 5
  }
  texture mirror
}
transform pop

transform translate -5 4 0
object {
  geometry sphere {
    radius 3
  }
  texture bw_checkerboard
}
transform pop

transform scale 5 1 1
transform rotate -20 0 1 1
transform translate 0 -9 0
object {
  geometry sphere {
    radius 1
  }
  texture yellow_matte
}
transform pop 3

object {
  geometry triangle_mesh {
    positions [
      -3  -3 1,
       3  -3 1,
       0   3 1,
    ]
    indices [
      0 1 2
    ]
  }
  texture cyan_plastic
}

transform translate -3  -3 1
object {
  geometry sphere {
    radius 0.5
  }
  texture red
}
transform pop

transform translate  3  -3 1
object {
  geometry sphere {
    radius 0.5
  }
  texture green
}
transform pop

transform translate  0   3 1
object {
  geometry sphere {
    radius 0.5
  }
  texture blue
}
transform pop

object {
  geometry difference {
    positive {
      geometry sphere {
        radius 3
      }
      transform translate 4 -4 0
    }
    negative {
      geometry sphere {
        radius 3
      }
      transform translate 3 -3.5 -.5
    }
  }
  texture yellow_matte
}

light {
  position 5 5 10
  color 0.4 0.4 0.4
}

light {
  position 5 5 -10
  color 0.4 0.4 0.4
}

light {
  position -15 -15 0
  color 0.4 0.4 0.4
}
