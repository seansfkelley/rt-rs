depth_limit 10
background_color #fff

camera perspective {
  position 0 0 -25
  look_at 0 0 0
  up 0 1 0
  field_of_view 60
}

// for pretty

image_dimensions 1024 1024
antialias 3

// for animation

// image_dimensions 512 512
// antialias 2
//
// animation {
//   frames 8
//   camera_transforms [
//     rotate 45 0 1 0
//   ]
// }

texture cyan_plastic constant flat {
  color 0 .7 .7
  specular_exponent 1
  reflectivity .1
}

texture yellow_matte constant flat {
  color .7 .7 0
  specular_exponent 0
}

texture green constant flat {
  color #0f0
}

texture glass constant transmissive {
  color 0.9 0.9 0.9
  specular_exponent 7
  index_of_refraction 1.5
  transmissivity 0.95
  reflectivity 0.95
}

transform translate 0 0 -15
object {
  geometry difference {
    positive {
      geometry sphere {
        radius 5
      }
      transform scale 1 1 0.1
    }
    negative {
      geometry rect_prism {
        min -1 -1 -1
        max 1 1 1
      }
    }
  }
  texture glass
}
transform pop

transform translate -3 -3 0
object {
  geometry sphere {
    radius 3
  }
  texture cyan_plastic
}
transform pop

transform rotate 45 1 1 1
transform translate 3 3 0
object {
  geometry rect_prism {
    min -2 -2 -2
    max 2 2 2
  }
  texture yellow_matte
}
transform pop 2

transform scale 1 1 0.1
transform translate 0 0 10
object {
  geometry sphere {
    radius 3
  }
  texture green
}
transform pop 2

light {
  position 5 5 10
  color #999
}

light {
  position 5 3 -20
  color #999
}

light {
  position -10 -10 -5
  color #999
}
