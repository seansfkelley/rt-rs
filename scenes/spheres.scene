image_dimensions 120 90
depth_limit 10
antialias 1
background_color .1 .1 .1

camera orthographic {
  position 0 0 25
  look_at 0 0 0
  up 0 1 0
  screen_size 4 3
}

material cyan flat {
  color 0 .7 .7
  specular_exponent 3
}

material magenta flat {
  color .7 0 .7
  specular_exponent 3
}

light {
  position -1 -1 -10
  color .5 .5 .5
}

transform translate 1 1 0
object {
  geometry sphere {
    radius 1
  }
  material cyan
}
transform pop

transform translate -1 -1 5
object {
  geometry sphere {
    radius 1
  }
  material magenta
}
