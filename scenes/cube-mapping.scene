inline "common/common.scene"

image_dimensions 512 512
antialias 3

camera perspective {
  position 0 5 5
  look_at 0 0 0
  up 0 1 0
  field_of_view 60
}

animation {
  frames 18
  camera_transforms [
    rotate 20 deg 0 1 0
  ]
}

material cubemap flat {
  texture image "common/textures/cube-map.png"
}

transform rotate 5 deg 0 1 0
object {
  geometry rect_prism {
    min -1 -1 -1
    max 1 1 1
  }
  material cubemap
}

light directional {
  direction 2 0 0
  radiance 5 5 5
}

light directional {
  direction -2 0 0
  radiance 5 5 5
}

light directional {
  direction 0 2 0
  radiance 5 5 5
}

light directional {
  direction 0 -2 0
  radiance 5 5 5
}

light directional {
  direction 0 0 2
  radiance 5 5 5
}

light directional {
  direction 0 0 -2
  radiance 5 5 5
}
