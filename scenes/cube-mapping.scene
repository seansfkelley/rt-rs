inline "common/common.scene"

image_dimensions 512 512
antialias 3

camera perspective {
  position 5 5 -5
  look_at 0 0 0
  up 0 1 0
  field_of_view 60
}

animation {
  frames 18
  camera_transforms [
    rotate 20 1 1 1
  ]
}

material cubemap flat {
  texture image "common/textures/cube-map.png"
}

object {
  geometry rect_prism {
    min -1 -1 -1
    max 1 1 1
  }
  material cubemap
}

light point {
  position 5 5 -10
  intensity 200 200 200
}

light point {
  position -5 -5 10
  intensity 200 200 200
}
