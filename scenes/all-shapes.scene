depth_limit 10
background_color #111
image_dimensions 1024 1024
antialias 3

camera perspective {
  position 2 5 -20
  look_at 0 0 0
  up 0 1 0
  field_of_view 60
}

animation {
  frames 3
  camera_transforms [
    rotate 15 0 1 0
  ]
}

texture white constant flat {
  color #fff
}

transform translate -3 3 0
object {
  geometry sphere {
    radius 3
  }
  texture white
}
transform pop

transform translate 3 3 0
object {
  geometry triangle_mesh {
    positions [
      -3  -3 0,
       3  -3 0,
       0   3 0,
    ]
    indices [
      0 1 2
    ]
  }
  texture white
}
transform pop

transform translate -3 -3 0
object {
  geometry rect_prism {
    min -1 -1 -1
    max  1  1  1
  }
  texture white
}
transform pop

transform translate 3 -3 0
object {
  geometry difference {
    positive {
      geometry sphere {
        radius 3
      }

    }
    negative {
      geometry rect_prism {
        min -4 -4 -4
        max  0  4  0
      }
    }
  }
  texture white
}
transform pop

light {
  position 0 0 -10
  color #c0c
}
