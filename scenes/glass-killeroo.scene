inline "common/common.scene"

inline "common/image/standard.scene"
// inline "common/image/orbit.scene"

background_color #666

camera perspective {
  position 0 50 -200
  look_at 0 0 0
  up 0 1 0
}

light point {
  position 50 100 -200
  intensity 12000 12000 12000
}

light point {
  position -50 100 -200
  intensity 12000 12000 12000
}

light directional {
  direction -0.5 -0.5 1
  radiance 1 1 1
}

transform scale 1000 1000 1
transform translate 0 0 300
object {
  geometry rect_prism {
    min -1 -1 -1
    max 1 1 0
  }
  material flat_off_white
}
transform pop all

transform rotate -75 1 0 0
transform rotate 55 0 1 0
transform translate 25 25 0
object {
  geometry "common/geometry/killeroo.geo"
  material glass
}
