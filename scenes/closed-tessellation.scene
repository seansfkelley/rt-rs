depth_limit 10
background_color #111

camera perspective {
  position 0 3 -13
  look_at 0 0 0
  up 0 1 0
  field_of_view 30
}

// for pretty

// image_dimensions 1024 1024
// antialias 3

// for animation

image_dimensions 512 512
antialias 1

animation {
  frames 18
  camera_transforms [
    rotate 20 0 1 0
  ]
}

texture purple_plastic constant flat {
  color #f0f
}

object {
  geometry cloth {
    curves [
      cubic_bezier_path [
        0 -3 0,
        -1 -2 -1,
        -0.5 -1 -0.5,
        -1 0 -1,
        -1.5 1 -1.5,
        0 2 0,
        0 3 0,
      ],
      cubic_bezier_path [
        0 -3 0,
        0 -2 0,
        -2 -1 2,
        -1 0 1,
        0 1 0,
        -2 2 2,
        0 3 0,
      ],
      cubic_bezier_path [
        0 -3 0,
        1 -2 1,
        0.5 -1 0.5,
        1 0 1,
        1.5 1 1.5,
        0 2 0,
        0 3 0,
      ],
      cubic_bezier_path [
        0 -3 0,
        0 -2 0,
        2 -1 -2,
        1 0 -1,
        0 1 0,
        2 2 -2,
        0 3 0,
      ],
    ]
    tessellation_factor 200
    closure join
  }
  texture purple_plastic
}

light {
  position 5 2 5
  color #777
}

light {
  position -5 2 5
  color #777
}

light {
  position 5 2 -5
  color #777
}
