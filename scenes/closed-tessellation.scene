inline "common/common.scene"
inline "common/lighting/3_front_1_back.scene"

inline "common/image/standard.scene"
// inline "common/image/orbit.scene"

camera perspective {
  position 0 3 -13
  look_at 0 0 0
  up 0 1 0
  field_of_view 30
}

object {
  geometry cloth {
    curves [
      cubic_bezier_path [
        0 -3 0,
        -1 -2 -1,
        -0.5 -1 -0.5,
        -1 0 -1,
        -1.5 1 -1.5,
        0 2 0,
        0 3 0,
      ],
      cubic_bezier_path [
        0 -3 0,
        0 -2 0,
        -2 -1 2,
        -1 0 1,
        0 1 0,
        -2 2 2,
        0 3 0,
      ],
      cubic_bezier_path [
        0 -3 0,
        1 -2 1,
        0.5 -1 0.5,
        1 0 1,
        1.5 1 1.5,
        0 2 0,
        0 3 0,
      ],
      cubic_bezier_path [
        0 -3 0,
        0 -2 0,
        2 -1 -2,
        1 0 -1,
        0 1 0,
        2 2 -2,
        0 3 0,
      ],
    ]
    tessellation_factor 200
    closure join
  }
  texture flat_purple
}

light {
  position 5 2 5
  color #777
}

light {
  position -5 2 5
  color #777
}

light {
  position 5 2 -5
  color #777
}
