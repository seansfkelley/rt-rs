depth_limit 10
background_color #111

camera perspective {
  position 0 0 -10
  look_at 0 3 0
  up 0 1 0
  field_of_view 60
}

// for pretty

image_dimensions 1024 1024
antialias 3

// for animation

// image_dimensions 512 512
// antialias 1
//
// animation {
//   frames 18
//   camera_transforms [
//     rotate 10 0 1 0
//   ]
// }

texture purple_plastic constant flat {
  color #f0f
  specular_exponent 1
  reflectivity .1
}

transform translate -3 0 0
object {
  geometry cloth {
    curves [
      cubic_bezier {
        p0 -1 0 0
        p1 -2 2 2
        p2 3 4 2
        p3 2 6 0
      },
      cubic_bezier {
        p0 1 0 0
        p1 2 2 -2
        p2 -3 4 -2
        p3 -2 6 0
      },
    ]
    tessellation_factor 100
  }
  texture purple_plastic
}
transform pop

transform translate 3 0 0
object {
  geometry cloth {
    curves [
      cubic_bezier {
        p0 -1 0 0
        p1 -2 2 2
        p2 3 4 2
        p3 2 6 0
      },
      cubic_bezier {
        p0 1 0 0
        p1 2 2 -2
        p2 -3 4 -2
        p3 -2 6 0
      },
    ]
    tessellation_factor 20
  }
  texture purple_plastic
}
transform pop


light {
  position 5 5 10
  color 0.4 0.4 0.4
}

light {
  position 5 5 -10
  color 0.4 0.4 0.4
}

light {
  position -15 -15 0
  color 0.4 0.4 0.4
}
