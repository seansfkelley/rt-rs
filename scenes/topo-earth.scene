inline "common/common.scene"
inline "common/lighting/3-front-1-back.scene"

inline "common/image/standard.scene"
// inline "common/image/orbit.scene"

camera perspective {
  position 0 5 -40
  look_at 0 0 0
  up 0 1 0
  field_of_view 30
}

texture flat_earth image {
  diffuse "common/textures/earth.png"
  ambient 0.2 * diffuse
  specular "common/textures/earth-specular.png"
  // reflectivity 1 * specular
}

transform rotate 180 0 1 0
transform rotate -10 1 0 0
object {
  geometry displace {
    map "common/textures/earth-displacement.png"
    min 9
    max 10
    mesh tessellated_sphere {
      depth 9
    }
  }
  texture flat_earth
}
transform pop 2
