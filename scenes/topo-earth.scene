depth_limit 10
background_color #111

camera perspective {
  position 0 5 -40
  look_at 0 0 0
  up 0 1 0
  field_of_view 30
}

// for pretty

image_dimensions 1024 1024
antialias 3

// for animation

// image_dimensions 512 512
// antialias 1
//
// animation {
//   frames 18
//   camera_transforms [
//     rotate 10 0 1 0
//   ]
// }

texture plain constant flat {
  color #ddd
}

texture earth image {
  diffuse "textures/earth.png"
  ambient 0.2 * diffuse
  specular "textures/earth-specular.png"
  // reflectivity 1 * specular
}

object {
  geometry displace {
    map "textures/earth-displacement.png"
    min 9
    max 10
    mesh tessellated_sphere {
      depth 9
    }
  }
  texture earth
}

light {
  position 20 20 -50
  color #333
}

light {
  position -20 20 -50
  color #333
}

light {
  position 0 -20 -50
  color #333
}

light {
  position -20 20 50
  color #333
}
