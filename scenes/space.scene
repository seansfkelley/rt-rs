inline "common/common.scene"

inline "common/image/standard.scene"
// inline "common/image/orbit.scene"

inline "common/space-materials.scene"

background_color #000

camera perspective {
  position 0 5 -20
  look_at 0 0 0
  up 0 1 0
  field_of_view 25
}

image_dimensions 1024 768

transform rotate 210 0 1 0
transform translate -1 0 0
object {
  geometry sphere {
    radius 3
  }
  material earth
}
transform pop all

transform rotate 270 0 1 0
transform translate 3 3 -1
object {
  geometry sphere {
    radius 1
  }
  material moon
}
transform pop all

light point {
  position 0 5 -20
  intensity 1000 1000 1000
}
