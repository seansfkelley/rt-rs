inline "common/common.scene"

// inline "common/image/standard.scene"
inline "common/image/orbit.scene"

camera perspective {
  position 0 1 -3
  look_at 0 1 0
  up 0 1 0
  field_of_view 60
}

object {
  geometry cloth {
    curves [
      cubic_bezier (
        -1 0 -1,
        -1 0 -1,
        -1 2 1,
        -1 2 1,
      ),
      cubic_bezier (
        1 0 1,
        1 0 1,
        1 2 -1,
        1 2 -1,
      ),
    ]
    tessellation_factor 3
  }
  texture flat_purple
}


light {
  position 0 0 10
  color 0.4 0.4 0.4
}

light {
  position 5 2 -10
  color 0.4 0.4 0.4
}
